<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/llp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.location.sunday1.society.Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8000"
        android:alpha="1.2"
        android:id="@+id/relativeLayout"></RelativeLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint="userid your mobileno"
        android:ems="10"
        android:id="@+id/editText11"
        android:layout_marginTop="51dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:gravity="center"
        android:background="#01A3DA"
        android:drawableLeft="@drawable/man"
        android:padding="5dp"

        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText12"
        android:hint="password"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:gravity="center"
        android:background="#01A3DA"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/lock"
        android:padding="10dp"
        android:layout_below="@+id/editText11"
        android:layout_alignLeft="@+id/editText11"
        android:layout_alignStart="@+id/editText11" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:id="@+id/button2"
        android:background="#C09C55"
        android:drawableLeft="@drawable/loginnn"
        android:padding="10dp"
        android:textColor="#fff"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/editText12"
        android:layout_alignLeft="@+id/editText12"
        android:layout_alignStart="@+id/editText12"
        android:layout_alignRight="@+id/editText12"
        android:layout_alignEnd="@+id/editText12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="register"
        android:id="@+id/button3"
        android:drawableLeft="@drawable/clipboard"
        android:padding="10dp"
        android:textColor="#fff"
        android:background="#C09C55"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/editText12"
        android:layout_alignEnd="@+id/editText12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forget password"
        android:id="@+id/button4"
        android:background="#C09C55"
        android:textColor="#fff"
        android:drawableLeft="@drawable/warningsign"
        android:padding="10dp"
        android:layout_below="@+id/button3"
        android:layout_marginTop="35dp"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

</RelativeLayout>
</ScrollView>