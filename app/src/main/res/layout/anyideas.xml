<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/llp"
    tools:context="com.location.sunday1.society.Anyideas">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:background="#6000"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Type your new ideas : "
        android:id="@+id/textView8"
        android:textColor="#fff"
        android:textStyle="italic|bold"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editText14"
        android:layout_alignStart="@+id/editText14" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText14"
        android:hint="Type here..."
        android:textStyle="italic"
        android:textColorHint="#fff"
        android:background="@drawable/border_shape1"
        android:textColor="#fff"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="39dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Submit"
        android:id="@+id/button39"
        android:background="#fff"

        android:textColor="#01A3DA"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:padding="20dp"
        android:layout_below="@+id/editText14"
        android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Any idea"
        android:textColor="#fff"
        android:textSize="20dp"
        android:id="@+id/textView106"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
